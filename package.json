{
  "name": "chat-api",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "start": "node index.js",
    "dev": "nodemon index.js",
    "test": "cross-env NODE_ENV=test jest --runInBand --forceExit",
    "test:coverage": "jest --coverage",
    "generate-token": "node scripts/generate-token.js",
    "test-auth": "node scripts/test-auth.js",
    "test-api": "node scripts/test-api.js",
    "test:widget": "cross-env NODE_ENV=test node tests/integration/widget-test.js",
    "widget:example": "npm run test:widget && start example/widget-test.html",
    "test-api:no-cleanup": "CLEANUP=false node scripts/test-api.js",
    "build": "node scripts/build-widget.js",
    "build:watch": "nodemon scripts/build-widget.js",
    "docker:build": "docker build -t chat-api .",
    "docker:dev": "docker-compose -f docker-compose.dev.yml up",
    "deploy": "npm run build && npm run docker:build && npm run docker:push",
    "db:backup": "node scripts/db-backup.js",
    "db:restore": "node scripts/db-restore.js",
    "db:indexes": "node src/models/indexes.js",
    "deploy:prod": "bash scripts/deploy.sh",
    "logs": "tail -f logs/combined.log",
    "metrics": "node scripts/metrics.js"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.0",
    "mongoose": "^7.0.3",
    "socket.io": "^4.8.1",
    "mongodb": "^5.0.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1"
  },
  "devDependencies": {
    "axios": "^1.6.2",
    "cross-env": "^7.0.3",
    "esbuild": "^0.19.0",
    "express-rate-limit": "^6.9.0",
    "helmet": "^7.0.0",
    "jest": "^29.7.0",
    "mongodb-memory-server": "^9.5.0",
    "nodemon": "^3.1.7",
    "supertest": "^6.3.4",
    "terser": "^5.19.0"
  }
}
